{
  "name": "Tab Actions",
  "description": "Toggles tab in a popup, move tab to the left/right, move tab to prev/next window",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "contextMenus"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "a_toggleTabInPopup": {
      "suggested_key": { "default": "Ctrl+O", "mac": "Command+O" },
      "description": "Toggles tab in popup"
    },
    "b_moveTabToLeft": {
      "description": "Move tab to the left"
    },
    "c_moveTabToRight": {
      "description": "Move tab to the right"
    },
    "d_moveTabPrevWindow": {
      "description": "Move tab to previous window"
    },
    "e_moveTabNextWindow": {
      "description": "Move tab to next window"
    }
  }
}
